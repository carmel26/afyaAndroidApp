<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    android:layout_marginBottom="5dp"
    tools:context=".AdminMaintainProductActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/maintain_product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/select_product_image"
            android:scaleType="centerCrop" />

        <EditText
            android:id="@+id/maintain_product_type_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_product_image"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/helveticalight"
            android:layout_marginBottom="5dp"
            android:hint="Drug name"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/maintain_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_product_type_view"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/helveticalight"
            android:hint="Drug Description"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14dp" />


            <EditText
                android:id="@+id/maintain_product_weight"
                android:layout_below="@+id/maintain_product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/helveticalight"
                android:hint="Drug Height"
                android:textAlignment="center"
                android:padding="12dp"
                android:layout_margin="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="13dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/maintain_product_price"
                android:layout_width="match_parent"
                android:layout_below="@+id/maintain_product_weight"
                android:layout_height="wrap_content"
                android:hint="Drug Price"
                android:textAlignment="center"
                android:fontFamily="@font/helveticalight"
                android:textColor="@color/colorPrimary"
                android:textSize="13dp"
                android:padding="12dp"
                android:layout_margin="5dp"
                android:textStyle="bold" />


        <Button
            android:id="@+id/maintain_product_btn_apply_changes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_product_price"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/helveticabold"
            android:layout_marginBottom="5dp"
            android:background="@drawable/buttons"
            android:padding="10dp"
            android:text="Apply Changes"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14dp" />


        <Button
            android:id="@+id/maintain_product_btn_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_product_btn_apply_changes"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/inputs_design"
            android:fontFamily="@font/helveticabold"
            android:padding="10dp"
            android:text="Delete"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <Button
            android:id="@+id/maintain_product_btn_approve_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_product_btn_delete"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:visibility="invisible"
            android:background="@drawable/buttons_delete"
            android:fontFamily="@font/helveticabold"
            android:padding="10dp"
            android:text="Approve Drug"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14dp" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>